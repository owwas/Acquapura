@model Acquapura.DataAccess.Delivery
@{
	ViewBag.Title = "Create";
	Layout = null;
}
<link rel="stylesheet" href="@Url.ContentVersioned("~/Assets/vendor/bootstrap-datepicker-1.6.4-dist/css/bootstrap-datepicker.css")" type="text/css">
@using (Html.BeginForm("Create", "Delivery", FormMethod.Post, new { enctype = "multipart/form-data", id = "Customerfrm" }))
{
	@Html.AntiForgeryToken()

	<input type="hidden" name="CustomerID" value="@ViewBag.CustomerID" />
	<div class="card">
		<div class="card-header">
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-16 col-xs-16 text-center">
						<h4><i class="fa fa-user" area-hidden="true"></i> Delivery</h4>
						<small>Add Delivery Here</small>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="notes notes-danger text-center" id="divMessage" style="display:none"></div>
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="row">
				<div class="col-md-6 col-sm-6">
					<div class="form-group">
						@Html.LabelFor(model => model.Delivered, "Delivered", htmlAttributes: new { @class = "control-label" })
						<div class="input-group mb-3">
							@Html.EditorFor(model => model.Delivered, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter delivered bottles here ...", required = "required" } })
							@Html.ValidationMessageFor(model => model.Delivered, "", new { @class = "text-danger" })
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-user"></i></span>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-10 col-xs-12">
					<div class="form-group">
						@Html.LabelFor(model => model.Date, "Date", htmlAttributes: new { @class = "control-label" })
						<div class='input-group date' id='myDatepickerStartDate'>
							<input type='text' name="Date" class="form-control" />
							<span class="input-group-addon">
								<span class="input-group-text"><i class="fa fa-calendar"></i></span>
							</span>
						</div>
					</div>
				</div>
				<div class="col-md-8 col-sm-16">
					<div class="form-group">
						@Html.LabelFor(model => model.Received, "Received", htmlAttributes: new { @class = "control-label" })
						<div class="input-group mb-3">
							@Html.EditorFor(model => model.Received, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter contact # here ...", required = "required" } })
							@Html.ValidationMessageFor(model => model.Received, "", new { @class = "text-danger" })
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-phone"></i></span>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8 col-sm-16">
					<div class="form-group">
						@Html.LabelFor(model => model.Balance, "Balance", htmlAttributes: new { @class = "control-label" })
						<div class="input-group mb-3">
							@Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter email here ...", required = "required" } })
							@Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-envelope"></i></span>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8 col-sm-16">
					<div class="form-group">
						@Html.LabelFor(model => model.CashReceived, "CashReceived", htmlAttributes: new { @class = "control-label" })
						<div class="input-group mb-3">
							@Html.EditorFor(model => model.CashReceived, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter email here ...", required = "required" } })
							@Html.ValidationMessageFor(model => model.CashReceived, "", new { @class = "text-danger" })
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-envelope"></i></span>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8 col-sm-16">
					<div class="form-group">
						@Html.LabelFor(model => model.CashBalance, "CashBalance", htmlAttributes: new { @class = "control-label" })
						<div class="input-group mb-3">
							@Html.EditorFor(model => model.CashBalance, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter email here ...", required = "required" } })
							@Html.ValidationMessageFor(model => model.CashBalance, "", new { @class = "text-danger" })
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-envelope"></i></span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="card-footer text-muted">
			<div class="row">
				<div class="col-md-16  col-xs-16">
					<button type="button" class="btn waves-effect waves-light btn-rounded btn btn-warning btn-sm float-left" data-dismiss="modal">
						Close
					</button>
					<button type="submit" class="btn waves-effect waves-light btn-rounded btn btn-primary btn-sm float-right">
						Add
					</button>
				</div>
			</div>
		</div>
	</div>
}
<script src="@Url.ContentVersioned("~/Assets/vendor/bootstrap-datepicker-1.6.4-dist/js/bootstrap-datepicker.min.js")"></script>

<script>
	$('#myDatepickerStartDate').datepicker({
		format: 'mm-dd-yyyy'
	});
</script>