@model IEnumerable<Acquapura.DataAccess.Customer>

@{
    ViewBag.Title = "List";
    Layout = null;
}
<div class="card">
    <div class="card-header">
        <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-success btn-sm" onclick="OpenModelPopup(this)" data="/Customers/Create/">
            <i class="ti-plus" aria-hidden="true"></i> Create New
        </button>
    </div>
    <div class="card-body">
        <table class="table table thead" id="dataTables-example">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>Code No</th>
                    <th>Address</th>
                    <th>Add Delivery</th>
                    <th>View Delivery</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodeNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-info btn-sm" onclick="OpenModelPopup(this)" data="/Delivery/Create/@item.ID">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Add Delivery
                        </button>
                    </td>
                    <td>
                        <a type="button" class="btn waves-effect waves-light btn-rounded  btn btn-info btn-sm"  href="/Delivery/Index/@item.ID">
                            <i class="fa fa-pencil" aria-hidden="true"></i> View Deliveries
                        </a>
                    </td>
                    <td>

                        <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-info btn-sm" onclick="OpenModelPopup(this)" data="/Customers/Edit/@item.ID">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                        </button>

                        <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-primary btn-sm" onclick="OpenModelPopup(this)" data="/Customers/Details/@item.ID">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Details
                        </button>

                        <button type="button" class="btn waves-effect waves-light btn-rounded  btn btn-danger btn-sm" onclick="OpenModelPopup(this)" data="/Customers/Delete/@item.ID">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Delete
                        </button>
                    </td>
                </tr>

                                }
            </tbody>
        </table>
    </div>
</div>


<script>

    "use strict";
    $(document).on('ready', function () {
        $('#dataTables-example').DataTable({
            responsive: true,
            pageLength: 10,
            sPaginationType: "full_numbers",
            oLanguage: {
                oPaginate: {
                    sFirst: "<<",
                    sPrevious: "<",
                    sNext: ">",
                    sLast: ">>"
                }
            }
        });
    });
</script>
